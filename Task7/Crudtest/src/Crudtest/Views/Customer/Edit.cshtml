@model Crudtest.DTO.CustomerDTO
@{ 

}
<form asp-controller="Customer" asp-action="Edit" method="post">
    <div class="form-group">
        @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control input-lg", @value = Model.FirstName, @placeholder = "Product Name", @required = "true", @maxlength = "128" } })
    </div>
    <div class="form-group">
        @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control input-lg", @value = Model.LastName, @placeholder = "Price", @maxlength = "128" } })
    </div>
    <div class="form-group">
        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control input-lg", @value = Model.Email, @placeholder = "Price", @maxlength = "128" } })
    </div>

    <input type="submit" value="Submit" class="btn btn-default" />
</form>