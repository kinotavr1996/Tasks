@model Crudtest.DTO.ProductDTO
@{ 

}
<form asp-controller="Home" asp-action="Edit" method="post">
    <div class="form-group">
        @Html.EditorFor(m => m.ProductName, new { htmlAttributes = new { @class = "form-control input-lg",@value = Model.ProductName, @placeholder = "Product Name", @required = "true", @maxlength = "128" } })
    </div>
    <div class="form-group">
        @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control input-lg", @value = Model.Price, @placeholder = "Price", @maxlength = "128" } })
    </div>

    <input type="submit" value="Submit" class="btn btn-default" />
</form>